  <div class="card-index" data-toggle="modal" data-target="#card-item-modal-<%= item.id %>">
    <% if item.photo.present? %>
      <div class="card-picture" style="background-image: url(<%= cl_image_path item.photo, height: 200, width: 300 %>)">
    <% else %>
      <div class="card-picture <%= item.category.downcase %>">
    <% end %>

    </div>

    <div class="card-body-item d-flex justify-content-between align-items-center py-3">
      <div class="card-left">
          <p id="index-card-title">
            <%= item.title.capitalize %>
          </p>
      </div>
        <div class="card-right">
          <p class="card-item-category"><%= item.category.capitalize %></p>
        </div>
        <div class="card-item-rating">
          <p><% item.rating.times do  %>
              <i class="fas fa-star"></i>
              <% end %>
              <% (5 - item.rating).times do  %>
              <i class="far fa-star"></i>
              <% end %>
          </p>
        </div>
    </div>
    <%= render 'items/card_modal', item: item %>
  </div>

