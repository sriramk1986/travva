  <div class="card-index">
    <div class="card-picture">
      <%= cl_image_tag item.photo, height: 200, width: 300, crop: :fill %>
    </div>
    <div class="card-body-item d-flex justify-content-between align-items-center py-3">
      <div class="card-left">
          <p id="index-card-title">
            <%= item.title.capitalize %>
          </p>
      </div>
        <div class="card-right">
          <p class="card-item-category"><%= item.category.capitalize %></p>
        </div>
        <div class="card-item-rating">
          <p><% item.rating.times do  %>
              <i class="fas fa-star"></i>
              <% end %>
              <% (5 - item.rating).times do  %>
              <i class="far fa-star"></i>
              <% end %>
          </p>
        </div>
    </div>
  </div>

