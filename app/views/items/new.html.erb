<div class="container mt-3">
  <h1 class="text-center mb-3">Add a New Item</h1>
  <div class="row mt-3 justify-content-center pt-3">
      <div class="col-6">
          <%= simple_form_for (@item) do |f| %>
            <%= f.input :title %>
            <%= f.input :url %>
            <%= f.input :address %>
            <%= f.input :time_of_day %>
            <%= f.input :weather %>
            <%= f.input :category %>
            <%= f.input :price %>
            <%= f.input :country%>
            <%= f.input :city %>
            <%= f.input :rating %>
            <%= f.input :photo %>
            <%= f.input :photo_cache, as: :hidden %>
            <%= f.button :submit, class: "btn btn-primary"%>
          <% end %>
      </div>
  </div>
</div>
