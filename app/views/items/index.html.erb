<div class="container">
  <div class="row">
    <div class="col-2">
      <!-- For Category Filter -->
      <%= simple_form_for :search, object: @search, url: items_path, method:
      "GET" do |f| %> 
        <% p @search %> <%= f.input :country, label: "Country",
        collection: Item::COUNTRY, required: false, as: :check_boxes %> 
        <%= f.input :category, label: "Category", collection: Item::CATEGORY,
        required: false, as: :check_boxes %> 
        <%= f.submit "Search", class: "btn btn-primary" %> 
        <%= link_to "Reset", items_path %> 
      <% end %>
    </div>

    <div class="col-10">
      <div class="cards">
        <% @items.each do |item| %>
        <div class="card-category">
          <%= cl_image_tag item.photo, height: 200, width: 300, crop: :fill %>
          <h2><%= item.title %></h2>
          <p><%= item.category %></p>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
