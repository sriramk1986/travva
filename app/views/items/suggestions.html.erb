<div class="container">
  <div class="row">
    <%= simple_form_for :search, url: suggestions_path, method:'GET', html: {class: 'form-inline'} do |f| %>
            <%= f.input :city, label: 'Enter city name:', required: false, input_html: {class: "search-input p-2 m-2"} %>
            <%= f.submit "Search", class: "btn btn-primary btn-search ml-2" %>
            <% end %>
  </div>

  <div class="row">
    <div class="col-4"
      id="map"
      style="width: 100%;
      height: 600px;"
      data-markers="<%= @markers.to_json %>"
    ></div>

    <div class="items-container">
      <div class="col-8 override_col">
        <div class="cards-item">
          <% @repos["results"].each do |result| %>
            <%= render 'items/suggestioncard', result: result %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
