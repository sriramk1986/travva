  <div class="card-index-medium" data-toggle="modal" data-target="#card-medium-item-modal-<%= item.id %>">
    <% if item.photo.present? %>
      <div class="card-picture-medium" style="background-image: url(<%= cl_image_path item.photo, height: 100, width: 200 %>)">
    <% else %>
      <div class="card-picture-medium <%= item.category.downcase %>">
    <% end %>

      </div>

    <div class="card-body-medium-item">
      <div class="card-title-medium">
        <%= item.title.capitalize %>
      </div>
      <div class="card-category-medium">
        <%= item.category.capitalize %>
      </div>
      <div class="card-medium-item-rating">
        <p>
          <% if item.rating %>
            <% item.rating.times do  %>
              <i class="fas fa-star"></i>
            <% end %>
            <% (5 - item.rating).times do  %>
              <i class="far fa-star"></i>
            <% end %>
          <% end  %>
        </p>
      </div>
      <div>
      <button class="btn dark-button-trip" type="button" aria-haspopup="true" aria-expanded="false">
      +
      <%= link_to @trip.name, trip_trip_items_path(@trip, item: item, date: @date), method: :post, class: 'display-none', remote: true %>
      </button>
      </div>
    </div>
    <%= render 'items/trip_card_modal', item: item %>
  </div>

