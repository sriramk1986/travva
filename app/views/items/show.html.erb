<div class="container">
  <p><%= @item.title.capitalize %></p>
  <p><%= cl_image_tag @item.photo, height: 300, width: 400, crop: :fill %></p>
  <p>Address: <%= @item.address %></p>
  <p>City: <%= @item.city %></p>
  <p>Country: <%= @item.country %></p>
  <p>Category: <%= @item.category %></p>
  <p>Time of day: <%= @item.time_of_day %></p>
  <p>Weather: <%= @item.weather %></p>
  <p>Price: <%= @item.price %></p>
  <p>Rating: <% @item.rating.times do  %>
    <i class="fas fa-star"></i>
    <% end %>
    <% (5 - @item.rating).times do  %>
    <i class="far fa-star"></i>
    <% end %>
  </p>
</div>
