<div class="trip-card" style="height: 165px">
  <%= cl_image_tag trip.photo, crop: :fill, class:'trip-card-img' %>
  <div class="card-img-overlay">
    <center><h2><%= trip.name.upcase%></h2></center>
    <center><p><%= trip.start_date.strftime('%b %e, %Y')%> - <%= trip.end_date.strftime('%b %e, %Y') %></p></center>
    <center><%= link_to trip_path(trip), method: :delete, data: {"confirm": "Are you sure?"} do %>
      <i class="far trash fa-trash-alt"></i>
    <% end %> |
        <%= link_to edit_trip_path(trip) do %>
      <i class="far trash fa-edit"></i>
    <% end %>
    </center>
  </div>
</div>

