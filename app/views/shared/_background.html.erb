<% if params[:controller] == 'pages' && params[:action] == 'home' %>
  <div class="home-body-background">
<% elsif params[:controller] == 'items' && params[:action] == 'index' %>
  <div class="body-background" style="background-image: linear-gradient(rgba(244,237,218,0.3), rgba(244,237,218,0.3)), url(<%= image_path 'sunbathing.jpg' %>)">
<% elsif params[:controller] == 'trips' && params[:action] == 'index' %>
  <div class="body-background" style="background-image: linear-gradient(rgba(244,237,218,0.3), rgba(244,237,218,0.3)), url(<%= image_path 'dancing.jpg' %>)">
<% else %>
  <div class="body-background" style="background-image: linear-gradient(rgba(244,237,218,0.3), rgba(244,237,218,0.3)), url(<%= image_path 'tattoo.jpg' %>)">
<% end %>

