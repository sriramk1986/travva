<% if params[:controller] == 'pages' && params[:action] == 'home' %>
  <div class="home-body-background" style="background-image: linear-gradient(rgba(244,237,218,0.4), rgba(244,237,218,0.7)), url(<%= image_path 'summer.gif' %>)">
<% elsif params[:controller] == 'items' && params[:action] == 'index' %>
  <div class="body-background" style="background-image: linear-gradient(rgba(244,237,218,0.7), rgba(244,237,218,0.7)), url(<%= image_path 'sunbathing.jpg' %>)">
<% elsif params[:controller] == 'trips' && params[:action] == 'index' %>
  <div class="body-background" style="background-image: linear-gradient(rgba(244,237,218,0.7), rgba(244,237,218,0.7)), url(<%= image_path 'dancing.jpg' %>)">
<% elsif params[:controller] == 'trips' && params[:action] == 'review' %>
  <div class="body-background" style="background-image: linear-gradient(rgba(244,237,218,0.7), rgba(244,237,218,0.7)), url(<%= image_path 'airport.jpg' %>)">
<% else %>
  <div class="body-background" style="background-image: linear-gradient(rgba(244,237,218,0.8), rgba(244,237,218,0.8)), url(<%= image_path 'palmier.jpg' %>)">
<% end %>

